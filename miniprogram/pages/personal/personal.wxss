/* pages/myPage/myPage.wxss */

page {
  background-color: #f1f1f1;
}

.box {
  width: 100%;
  margin: auto;
  overflow: hidden;
}

.login {
  color: #fff !important;
  line-height: 2 !important;
  border: 1rpx solid #fff !important;
}
.user{
    display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.userinfo {
  position: relative;
  width: 100%;
  height: 100px;
  text-align: center;
  line-height: 50px;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.userinfo::after {
  width: 140%;
  height: 100px;
  position: absolute;
  left: -20%;
  top: 0;
  z-index: -1;
  content: '';
  border-radius: 0 0 50% 50%;
  background-color: #9e7d5a;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.context {
  width: 92%;
  margin: 0 30rpx;
}

.information {
  width: 100%;
  height: 130rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-radius: 5px;
}

.information-div {
  width: 50%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin: 20rpx 0;
  font-size: 14px;
}

.information-div>view:first-child {
  width: 50rpx;
  height: 50rpx;
}

.information-div>view:first-child>image {
  width: 50rpx;
  height: 50rpx;
}

.information2 {
  width: 100%;
  margin-top: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  border-radius: 5px;
}

.information2-div {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: #606060;
  margin: 20rpx 0rpx;
}

.information2-div view {
  color: #000;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 14px !important;
}

.information2-div view text:first-child {
  padding: 0 10rpx;
}
