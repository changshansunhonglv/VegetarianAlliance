/* pages/home/language/language.wxss */

.main {
  width: 92%;
  margin: 4%;
}

.content {
  width: 100%;
}

.info {
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 14px;
  line-height: 40rpx;
  padding: 2% 0;
  border-bottom: 1px solid silver;
}

.info>text:first-child {
  text-align: center;
  font-size: 18px;
  font-weight: bold;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.userinfo image {
  margin: 2%;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.userinfo text {
  padding-left: 20rpx;
  font-size: 16px;
}

.information {
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid silver;
}

.information-div {
  width: 50%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin: 20rpx 0;
  font-size: 14px;
}

.information-div>view:first-child {
  width: 50rpx;
  height: 50rpx;
}

.information-div>view:first-child>image {
  width: 50rpx;
  height: 50rpx;
}

/* 互动 */

.interaction {
  width: 100%;
}

.comment {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.comment input {
  font-size: 14px;
  width: 80%;
}

.btn-comment {
  margin: 0;
  padding: 0;
  font-size: 14px;
  color: #3191fc;
  background-color: #fff;
}

.btn-comment::after {
  border: 0;
}

.interaction-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 1px solid silver;
}

.item-left {
  width: 70rpx;
  height: 70rpx;
}

.item-left image {
  margin: 2%;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.item-right {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-left: 20rpx;
}

.item-right>view:first-child {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
}

.item-right>view:first-child>text:first-child {
  font-size: 16px;
}

.item-right>view:first-child>text:last-child {
  color: #b3b3b3;
}

.item-right>view:last-child {
  font-size: 14px;
  color: #787878;
}
