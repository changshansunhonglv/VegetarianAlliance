
.page-state-center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  align-content: center;
  height: 100%;
  width: 100%;
}
.page-state-container {
  animation: fadein 2s 1 ease-out;
  height: 100%;
  width: 100%;
}
.page-state-container~view {
  display: none;
}

page {
  height: 100%;
  overflow-y: auto;
}

/* blclist */

.mbdiv{
  width: 100%;
}
.list-div{
  width: 92%;
  margin:0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx; 
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #ccc;

}

.img{  width: 33%;
  height: 160rpx;
  background-color: rgb(80, 235, 255)
}
.img image{  width: 100%;
  height: 100%;
  
}
.centext{
  width: 70%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
}
.centext view:first-child {
  display: flex;
  flex-direction: row;
  align-items:flex-start;
}
.centext view:first-child text:first-child{
  font-size:16px;
   font-weight:  bold;
  padding-right: 5rpx;
  display: -webkit-box;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.hot{
  display: inline-block;
width: 54rpx;
height:36rpx ;
border-radius: 5px;
  background-image: url(data:image/png;base64,);
  background-size: 100% 100%;
}
.centext>text{
  font-size: 12px;
  color: #666;
  display: -webkit-box;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.centext>view:last-child{
  width: 100%;
  font-size: 10px;
  color: #666;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
.centext>view:last-child view{
  width: 24%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.centext>view:last-child view image{
  width: 30rpx;
  height: 30rpx;
}
